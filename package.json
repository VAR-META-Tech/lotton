{
  "name": "lot",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:game": "turbo --filter=lottery build",
    "build:admin": "turbo --filter=admin-lottery build",
    "build:api": "turbo --filter=lottery-be build",
    "dev": "turbo dev",
    "dev:game": "turbo --filter=lottery dev",
    "dev:admin": "turbo --filter=admin-lottery dev",
    "dev:api": "turbo --filter=lottery-be dev",
    "dev:worker": "turbo --filter=lottery-be dev:worker",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.14",
    "typescript": "^5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=20"
  }
}